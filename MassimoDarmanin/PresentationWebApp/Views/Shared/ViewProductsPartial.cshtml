@model IEnumerable<ShoppingCart.Application.ViewModels.ProductViewModel>



@foreach (var p in Model)
{
<div class="col-6">
    <div class="card" style="width: 18rem;">
        <img src="@p.ImageUrl" class="card-img-top card-image" alt="@p.Name">
        <div class="card-body">
            <h5 class="card-title">@p.Name</h5>
            <p class="card-text">€@p.Price</p>
            <a href="/Products/Details?id=@p.Id" class="btn btn-primary">View Specifications</a>
            @*<a asp-controller="Order" asp-action="Buy" asp-route="@p.Id">Add to Cart</a>*@
            @if (User.IsInRole("Admin"))
            {
        <a href="/Products/Delete?id=@p.Id" class="btn btn-danger">Delete</a>}

        </div>
    </div>
</div>}
